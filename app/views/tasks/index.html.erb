<h1>Edit Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
  <li>
    <%= task.completed? ? '✅' : '❎' %>
    <%= link_to task.title, task_path(task) %>
     <%= link_to '❌', task_path(task), method: :delete, data: { confirm: 'Are you sure to delete?'}  %>
  </li>
  <% end %>
</ul>

<p><%= link_to '➕Add a new Task', new_task_path %></p>

<%= render 'form' %>
